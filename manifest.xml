<package>
  <description brief="Logfile converter">
    Logfile converter from Rock's pocolog format to MessagePack.
  </description>
  <author>Alexander Fabisch/Alexander.Fabisch@dfki.de</author>
  <maintainer>Alexander Fabisch/Alexander.Fabisch@dfki.de</maintainer>
  <license>LGPL-2.1 or later</license>
  <url>https://github.com/rock-core/tools-pocolog2msgpack</url>
  <logo>none</logo>

  <depend package="tools/pocolog_cpp" />
  <depend package="typelib" />
  <depend package="boost" />
  <depend package="tools/msgpack-c" />
  <depend package="zlib" />
  <depend package="python3" optional="1" />
  <depend package="python3-distutils" optional="1" />
  <depend package="python3-nose" optional="1" />
  <depend package="python3-pexpect" optional="1" />
  <depend package="python3-msgpack" optional="1" />

  <keywords>
    <keyword>Utilities</keyword>
  </keywords>
  <stage>1</stage>
  <use>multi project</use>
  <activity>active</activity>
  <classifiers>
    <classifier>c++</classifier>
    <classifier>rock</classifier>
    <classifier>ubuntu</classifier>
  </classifiers>
</package>
